<h1>Members</h1>
<%= link_to 'New member', new_member_path, class: 'btn' %>
<br />
<br />

<table>
  <tr>
    <th>Name</th>
    <th>Short URL</th>
    <th>Friend Count</th>
  </tr>

  <% @members.each do |member| %>
    <tr>
      <td><%= link_to member.name, member %></td>
      <td><%= link_to member.website_short_url, member.website_short_url if member.website_short_url.present? %></td>
      <td><%= member.friendships_count %></td>
    </tr>
  <% end %>
</table
